@model Soundgenius.Models.Faixas

@{
    ViewData["Title"] = "Detalhes de uma faixa " + Model.Titulo;
}

<h1>faixa</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FicheiroImg)
        </dt>
        <dd class="col-sm-8">
            <img src="~/Imagens/Faixas/@Model.FicheiroImg" alt="imagem da faixa @Model.Titulo" title="@Model.Titulo" />
        </dd>
    </dl>
</div>

<!-- outra linha de comentário -->
@* Adicionar as consultas do veterinário *@
<h4>Lista de consultas associadas ao/à @Model.Titulo </h4>

@if (Model.AlbumFaixas.Count == 0)
{
    <p>Não há Albuns associadas à faixa.</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Album</th>
            <th>Faixa</th>
        </tr>
        @foreach (var AlbumFaixas in Model.AlbumFaixas)
        { // listar todas as Consultas Associadas ao Veterinário que está em exibição
    <tr>
        <td>@AlbumFaixas.ID</td>
        <td>@AlbumFaixas.Album.Titulo</td>
        <td>@AlbumFaixas.Album.Artista.Nome</td>
    </tr>
        }
    </table>
}

<br />
<br />




<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a asp-action="Index">Regressar à listagem</a>
</div>